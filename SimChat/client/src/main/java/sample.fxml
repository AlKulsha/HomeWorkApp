<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20.0" fx:controller="chat.lesson4.Controller">
    <TextArea fx:id="textArea" editable="false" promptText="Здесь будет отображаться ваша переписка" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="msgField" onAction="#sendBtnAction" promptText="Введите ваше сообщение" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="1.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="sendBtn" onAction="#sendBtnAction" text="Отправить">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="1.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>